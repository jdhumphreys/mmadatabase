<!-- Validation failure messages -->
<% if @venue.errors.any? %>
  <% @venue.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Venue #<%= @venue.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_venue/<%= @venue.id %>" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for city -->
      <div class="form-group">
        <label for="city" class="control-label">
          City
        </label>

        <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @venue.city %>">
      </div>

      <!-- Label and input for state -->
      <div class="form-group">
        <label for="state" class="control-label">
          State
        </label>

        <input type="text" id="state" name="state" placeholder="State" class="form-control" value="<%= @venue.state %>">
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @venue.name %>">
      </div>

      <!-- Label and input for country -->
      <div class="form-group">
        <label for="country" class="control-label">
          Country
        </label>

        <input type="text" id="country" name="country" placeholder="Country" class="form-control" value="<%= @venue.country %>">
      </div>

      <!-- Label and input for capacity -->
      <div class="form-group">
        <label for="capacity" class="control-label">
          Capacity
        </label>

        <input type="text" id="capacity" name="capacity" placeholder="Capacity" class="form-control" value="<%= @venue.capacity %>">
      </div>

      <!-- Label and input for created_by -->
      <div class="form-group">
        <label for="created_by" class="control-label">
          Created by
        </label>

        <%= select_tag(:created_by, options_from_collection_for_select(User.all, :id, :email, @venue.created_by), :class => "form-control") %>
      </div>

      <!-- Label and input for pic -->
      <div class="form-group">
        <label for="pic" class="control-label">
          Pic
        </label>

        <%= cl_image_tag(@venue.pic.to_s, :width => 90, :height => 90, :crop => :thumb) %>
        <input type="file" id="pic" name="pic" class="form-control">
      </div>

      <!-- Label and input for updated_by -->
      <div class="form-group">
        <label for="updated_by" class="control-label">
          Updated by
        </label>

        <input type="text" id="updated_by" name="updated_by" placeholder="Updated by" class="form-control" value="<%= @venue.updated_by %>">
      </div>

      <button class="btn btn-warning">
        Update Venue
      </button>
      or
      <a href="/venues/<%= @venue.id %>">Cancel</a>
    </form>
  </div>
</div>
